# ===== API KEYS =====
# Anthropic Claude API (principale)
ANTHROPIC_API_KEY=sk-ant-api03-xxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxx

# OpenAI API (fallback opzionale)
OPENAI_API_KEY=sk-xxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxx

# ===== LINKEDIN CREDENTIALS =====
# Opzione 1: Email e Password per linkedin-api (non ufficiale)
LINKEDIN_EMAIL=tua-email@example.com
LINKEDIN_PASSWORD=tua-password-sicura

# Opzione 2: OAuth (se usi API ufficiale - richiede app LinkedIn)
# LINKEDIN_CLIENT_ID=xxxxxxxxxxxxx
# LINKEDIN_CLIENT_SECRET=xxxxxxxxxxxxx
# LINKEDIN_REDIRECT_URI=http://localhost:8501/callback

# ===== DATABASE =====
# Path del database SQLite (default: data/posts.db)
DATABASE_PATH=data/posts.db

# ===== APP SETTINGS =====
# Nome dell'app
APP_NAME=LinkedIn Post Generator

# Ambiente (development/production)
ENVIRONMENT=development

# Debug mode
DEBUG=True

# ===== LLM SETTINGS =====
# Modello Claude da utilizzare
CLAUDE_MODEL=claude-3-opus-20240229
# Alternative: claude-3-sonnet-20240229, claude-3-haiku-20240307

# Modello OpenAI di fallback
OPENAI_MODEL=gpt-4-turbo-preview
# Alternative: gpt-3.5-turbo

# Temperatura per la generazione (0.0-1.0)
LLM_TEMPERATURE=0.7

# Numero massimo di token per risposta
MAX_TOKENS=500

# ===== CONTENT EXTRACTION =====
# User agent per web scraping
USER_AGENT=Mozilla/5.0 (Windows NT 10.0; Win64; x64) AppleWebKit/537.36 (KHTML, like Gecko) Chrome/120.0.0.0 Safari/537.36

# Timeout per richieste HTTP (secondi)
REQUEST_TIMEOUT=10

# ===== LINKEDIN SETTINGS =====
# Limiti di rate per LinkedIn
LINKEDIN_RATE_LIMIT_POSTS_PER_DAY=10
LINKEDIN_RATE_LIMIT_DELAY_SECONDS=30

# ===== DEFAULT CONTENT SETTINGS =====
# Hashtag predefiniti (separati da virgola)
DEFAULT_HASHTAGS=#logistics,#innovation,#supplychain,#transportation

# Lunghezza massima post LinkedIn
MAX_POST_LENGTH=3000

# Tono predefinito
DEFAULT_TONE=professional

# Tipo di post predefinito
DEFAULT_POST_TYPE=informative

# ===== SCHEDULING =====
# Timezone predefinito
TIMEZONE=Europe/Rome

# Orari ottimali per pubblicazione (formato 24h, separati da virgola)
OPTIMAL_POSTING_HOURS=9,10,14,15

# ===== SECURITY =====
# Chiave segreta per sessioni (genera una random in produzione)
SECRET_KEY=your-secret-key-change-this-in-production

# ===== LOGGING =====
# Livello di log (DEBUG, INFO, WARNING, ERROR)
LOG_LEVEL=INFO

# Path file di log
LOG_FILE=logs/app.log